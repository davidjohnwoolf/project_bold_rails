<h1>Contact</h1>

<div>
  <%= form_tag('/contact') do %>
    <div><%= label_tag :name %></div>
    <div><%= text_field_tag :name %></div>

    <div><%= label_tag :email %></div>
    <div><%= email_field_tag :email %></div>

    <div><%= label_tag :comments %></div>
    <div><%= text_area_tag :comments %></div>

    <div><%= submit_tag 'Send'%></div>
  <% end %>
</div>
